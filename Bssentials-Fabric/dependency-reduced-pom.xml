<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bssentials-parent</artifactId>
    <groupId>bssentials</groupId>
    <version>3.x</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>Bssentials-Fabric</artifactId>
  <version>3.x</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources</directory>
        <excludes>
          <exclude>*.properties</exclude>
        </excludes>
      </resource>
    </resources>
    <finalName>BssentialsFabric</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <proc>none</proc>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <forceCreation>true</forceCreation>
        </configuration>
      </plugin>
      <plugin>
        <groupId>net.md-5</groupId>
        <artifactId>specialsource-maven-plugin</artifactId>
        <version>1.3-SNAPSHOT</version>
        <executions>
          <execution>
            <id>reobfuscate</id>
            <phase>package</phase>
            <goals>
              <goal>remap</goal>
            </goals>
            <configuration>
              <srgIn>${project.parent.basedir}/fabric-mcserver/mappings/yarn2intermediary.srg</srgIn>
              <skipDebug>false</skipDebug>
              <copyResources>true</copyResources>
              <mixinSupport>true</mixinSupport>
              <remappedDependencies>
                <remappedDependency>net.fabricmc.mcmapped:minecraft-server:1.16.3-SNAPSHOT:jar</remappedDependency>
              </remappedDependencies>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.1</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>junit:junit</artifact>
                  <includes>
                    <include>bssentials/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>jenkins</id>
      <build>
        <finalName>Bssentials3-FABRIC</finalName>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>fungus</id>
      <url>https://isaiah.fungus-soft.com/maven-repo/</url>
    </repository>
    <repository>
      <id>FabricMC</id>
      <url>https://maven.fabricmc.net/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>me.isaiah.mods</groupId>
      <artifactId>FabricEconomy</artifactId>
      <version>1.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.javazilla.mods</groupId>
      <artifactId>CyberPermissions</artifactId>
      <version>1.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.fabricmc.mcmapped</groupId>
      <artifactId>minecraft-server</artifactId>
      <version>1.16.3-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.fabricmc.fabric-api</groupId>
      <artifactId>fabric-api</artifactId>
      <version>0.22.0+build.408-1.16</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <full.version>${release.version}-b${build.version}</full.version>
    <release.version>3.0</release.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <build.version>${BUILD_NUMBER}</build.version>
  </properties>
</project>
